{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@lib/*": [
        "./src/app/lib/*"
      ],
      "@components/*": [
        "./src/app/components/*"
      ],
      "@services/*": [
        "./src/app/services/*"
      ],
      "@atoms/*": [
        "./src/app/components/atoms/*"
      ],
      "@constants/*": [
        "./src/app/constants/*"
      ],
      "@styles/*": [
        "./src/app/styles/*"
      ],
      "@assets/*": [
        "./src/app/assets/*"
      ],
      "@graphics/*": [
        "./src/app/components/graphics/*"
      ],
      "@organisms/*": [
        "./src/app/components/organisms/*"
      ],
      "@page-sections/*": [
        "./src/app/components/page-sections/*"
      ],
      "@molecules/*": [
        "./src/app/components/molecules/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
